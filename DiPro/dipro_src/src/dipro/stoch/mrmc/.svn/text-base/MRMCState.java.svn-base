package dipro.stoch.mrmc;

import dipro.graph.State;

public class MRMCState implements State {

	private MRMCModel model;

	private int id;

	public MRMCState(MRMCModel model, int id) {
		this.model = model;
		this.id = id;
	}

	public Object getLabelValue(String label) {
		return model.checkLabel(this, label);
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	@Override
	public int hashCode() {
		final int PRIME = 31;
		int result = 1;
		result = PRIME * result + id;
		return result;
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		final MRMCState other = (MRMCState) obj;
		if (model != other.model)
			return false;
		if (id != other.id)
			return false;
		return true;
	}

	public String toString() {
		return "["+Integer.toString(id)+"]";
	}
}
