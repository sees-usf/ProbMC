package dipro.graph;

import dipro.util.Pair;

public class DefaultDirectedEdge extends DirectedEdge {

	protected Vertex source, target;

	public DefaultDirectedEdge(Vertex v1, Vertex v2) {
		source = v1;
		target = v2;
	}

	@Override
	public Pair<Vertex, Vertex> getVertices() {
		return new Pair<Vertex, Vertex>(source, target);
	}

	public String toString() {
		return "(" + source().toString() + ", " + target().toString() + ")";
	}

	@Override
	public void setSource(Vertex v) {
		source = v;
	}

	@Override
	public void setTarget(Vertex v) {
		target = v;
	}

	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + ((source == null) ? 0 : source.hashCode());
		result = prime * result + ((target == null) ? 0 : target.hashCode());
		return result;
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		final DefaultDirectedEdge other = (DefaultDirectedEdge) obj;
		if (source == null) {
			if (other.source != null)
				return false;
		} else if (!source.equals(other.source))
			return false;
		if (target == null) {
			if (other.target != null)
				return false;
		} else if (!target.equals(other.target))
			return false;
		return true;
	}

}
