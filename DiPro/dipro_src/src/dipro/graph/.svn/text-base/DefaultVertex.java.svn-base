package dipro.graph;

public class DefaultVertex implements Vertex {

	public final static String VERTEX_ID_LABEL_NAME = "vertex_id";
	protected int id;

	public DefaultVertex(int id) {
		this.id = id;
	}

	public int getId() {
		return id;
	}

	public String toString() {
		return "[" + Integer.toString(id) + "]";
	}

	@Override
	public int hashCode() {
		final int PRIME = 31;
		int result = 1;
		result = PRIME * result + id;
		return result;
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		final DefaultVertex other = (DefaultVertex) obj;
		if (id != other.id)
			return false;
		return true;
	}

	@Override
	public Object getLabelValue(String labelName) {
		if (labelName.equals(VERTEX_ID_LABEL_NAME))
			return id;
		throw new IllegalArgumentException();
	}
}
